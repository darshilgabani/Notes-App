<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeColor"
    tools:context=".ui.Fragment.EditNotesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/titleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_shape"
            android:padding="15dp"
            android:textSize="35dp"
            android:fontFamily="@font/nunito_bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/editTextColor"
            android:textColorHint="@color/editTextColor"
            android:maxLines="1"
            android:hint="Title..."/>

        <EditText
            android:id="@+id/subTitleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_shape"
            android:padding="15dp"
            android:maxLines="1"
            android:textSize="25dp"
            android:fontFamily="@font/nunito_bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/editTextColor"
            android:textColorHint="@color/editTextColor"
            android:hint="Subtitle..."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tagRed"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/dot_red" />

            <ImageView
                android:id="@+id/tagYellow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/dot_yellow" />

            <ImageView
                android:id="@+id/tagGreen"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/dot_green" />


        </LinearLayout>

        <EditText
            android:id="@+id/notesEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_shape"
            android:padding="15dp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="start"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/editTextColor"
            android:textColorHint="@color/editTextColor"
            android:hint="Notes..."/>
    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/editSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="bottom|right"
        android:clickable="true"
        app:backgroundTint="#FFFFFF"
        android:src="@drawable/ic_baseline_done_24" />
</FrameLayout>